<body class="signup">
  <div class="container-fluid center card show-photo" data-photo-id="<%= @photo.id %>" data-user-id="<%=@photo.user.id%>">
    <div class="card card-header">
    </div>

    <div class="card-body photo-form">
      <div class="show-photo-image">
      </div>

      <% if @photo.user == current_user %>
        <div><p><a class="update-label">Update caption</a></p></div>
      <% end %>

      <div class="caption-form">
      </div>

      <a href="#" class="js-next" data-id="<%= @photo.id %>">Next Photo</a>
    </div>


  </div>
</body>
