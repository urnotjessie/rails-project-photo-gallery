<body class="signup">
<div class="container-fluid center card">
  <div class="card card-header">
    <div class="card-header text-center ">
      <h3>Upload photo</h3><br>
      <% if flash[:error] %>
        <%= render 'error_messages' %>
      <% end %>
    </div>
    
    <div class="card-body photo-form">
      <%= form_for @photo do |f| %>
        <%= f.file_field :image, class: "col-sm-12"  %><br><br>
        <%= f.text_field :caption, placeholder: "Add Caption", class: "col-sm-12" %><br><br>
        <%= f.submit "Upload photo", class:"col-sm-12"%>
      <% end %>
    </div>
  </div>
</div>
</body>
