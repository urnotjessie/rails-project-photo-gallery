<body class="signup">
<div class="container-fluid center card">
  <div class="card-header text-center ">
    <%= image_tag @photo.thumbnail, :class => "img-thumbnail card-img-top"%>
  </div>
  <div class="card-block">
    <%= @photo.caption %>
  </div>
</div>

<div class="container-fluid label-form">
  <%= form_for [@photo, @photo_user] do |f| %>
    <%= f.label :label, 'Update label'%><br>
    <% current_user.labels.each do |label_name| %>
      <% if label_name == @photo_user.label %>
        <%= f.radio_button :label, label_name %> <%= label_name %>
      <% else %>
        <%= f.radio_button :label, label_name, checked: false %> <%= label_name %>
      <% end %>
    <% end %>
    <br>
    <%= f.radio_button :label, 'Other' %> Other (please list):
    <%= f.text_field :other_label, :value => "" %><br>
    <br><br>
    <%= f.submit "Submit" %><br>
  <% end %>
</div>
</body>
