<div class="center jumbotron">

  <% if session[:user_id] %>
    <% @user = User.find(session[:user_id]) %>
    <h1><%= @user.username %></h1>

  <% else %>
    <%= form_tag(login_path) do %>
      <%= text_field_tag 'email', nil, placeholder: 'Email' %><br><br>
      <%= password_field_tag 'password', nil, placeholder: 'Password' %><br><br>
      <%= submit_tag "Log In" %>
    <% end %>

    <%= link_to 'Log in with Facebook!', '/auth/facebook' %>
  <% end %>
</div>

<% Photo.all.each do |photo| %>
  <%= image_tag photo.thumbnail %>
  <%= photo.caption %>
  <%= link_to "#{photo.user.username}", user_path(photo.user) %>
  <% if session[:user_id] %>
    <%= link_to "Add to my collection", new_photo_photo_user_path(photo.id) %>
  <% end %>
<% end %>
